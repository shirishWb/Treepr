<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.whitebirdtechnology.treepr.Favourite.MainActivityFavorite">

<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:id="@+id/activity_main_favorite"
    android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view_fav"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</android.support.v4.widget.SwipeRefreshLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayoutVisited">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/no_content"
                            android:id="@+id/imageViewNoContent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Contents"
                            android:id="@+id/textViewNoContents"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/imageViewNoContent"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:gravity="center"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log in"
                            android:textColor="@color/white"
                            android:layout_below="@+id/textViewNoContents"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/buttonLogInNoContent"
                            android:background="@drawable/oval_shap_button"
                            android:layout_marginTop="10dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/buttonLogInNoContent"
                            android:layout_centerHorizontal="true"
                            android:text="Sign Up"
                            android:layout_marginTop="10dp"
                            android:id="@+id/buttonSignUpNoContent"
                            android:textColor="@color/white"
                            android:background="@drawable/oval_shap_button"
                            />
                </RelativeLayout>
        </FrameLayout>
</RelativeLayout>

