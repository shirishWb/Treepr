<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_your_stories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitebirdtechnology.treepr.Home_Page.MainActivityYourStories">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewStory"
        android:layout_below="@+id/imageViewYourStories">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/imageViewYourStories"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Status :"
            android:textSize="20sp"
            android:layout_below="@+id/imageViewYourStories"
            android:id="@+id/textViewStatusTag"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewCommentTag"
                android:id="@+id/editTextStatus"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/imageViewYourStories"
                android:layout_marginTop="10dp"
                android:maxLength="70"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextStatus"
                android:id="@+id/textViewCommentTag"
                android:text="Comment :"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextStatus"
                android:layout_toRightOf="@+id/textViewCommentTag"
                android:layout_marginLeft="5dp"
                android:maxLength="1000"
                android:layout_marginTop="10dp"
                android:id="@+id/editTextComment"
                android:inputType="textMultiLine" />
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textViewCancelStory"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:layout_below="@+id/autoCompleteTextViewSpotYourStory"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/textViewShareStory"
                android:text="Share Story"
                android:layout_toRightOf="@+id/textViewCancelStory"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_below="@+id/autoCompleteTextViewSpotYourStory"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextComment"
                android:layout_marginTop="20dp"
                android:text="City :"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewCityTagYourStory" />
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewCommentTag"
                android:layout_marginLeft="5dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:id="@+id/autoCompleteTextViewCityYourStory"
                android:layout_below="@+id/editTextComment"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoCompleteTextViewCityYourStory"
                android:layout_marginTop="20dp"
                android:text="Place :"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/textViewPlaceYourStoryTag"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewCommentTag"
                android:layout_marginLeft="5dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:id="@+id/autoCompleteTextViewPlaceYourStory"
                android:layout_below="@+id/autoCompleteTextViewCityYourStory"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoCompleteTextViewPlaceYourStory"
                android:layout_marginTop="20dp"
                android:text="Spot :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewSpotYourStoryTag"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewCommentTag"
                android:layout_marginLeft="5dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:id="@+id/autoCompleteTextViewSpotYourStory"
                android:layout_below="@+id/autoCompleteTextViewPlaceYourStory"
                android:layout_marginTop="10dp"/>

    </RelativeLayout>

</ScrollView>
