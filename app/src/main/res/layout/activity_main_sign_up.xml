<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitebirdtechnology.treepr.Sign_Up.MainActivitySignUp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="510dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register with Treepr"
        android:textColor="@color/gray_color"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_sign_up">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email Address"
            android:inputType="textEmailAddress"

            android:id="@+id/editTextEmailInputSignUp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Password"
            android:layout_marginTop="10dp"
            android:maxLength="15"
            android:layout_below="@+id/editTextEmailInputSignUp"
            android:id="@+id/editTextPasswordInputSignUp"
            android:inputType="textPassword" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextConfirmPasswordInputSignUp"
            android:layout_below="@+id/editTextPasswordInputSignUp"
            android:layout_marginTop="10dp"
            android:maxLength="15"
            android:hint="Confirm Password"
            android:inputType="textPassword"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="80"
            android:layout_below="@+id/editTextConfirmPasswordInputSignUp"
            android:hint="Your Full Name"
            android:layout_marginTop="10dp"
            android:id="@+id/editTextFullNameSignUp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextFullNameSignUp"
            android:layout_marginTop="10dp"
            android:maxLength="10"
            android:hint="Mobile Number   (in case of Emergency)"
            android:id="@+id/editTextMobileNumberSignUp"
            android:inputType="number"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMobileNumberSignUp"
            android:hint="Your State"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="10dp"
            android:id="@+id/autoCompleteTextViewStateNameSignUp"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoCompleteTextViewStateNameSignUp"
            android:id="@+id/autoCompleteTextViewCityNameSignUp"
            android:hint="Your City"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:layout_marginTop="10dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoCompleteTextViewCityNameSignUp"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/colorPrimary"
            android:hint="Male"
            android:layout_marginLeft="20dp"
            android:checked="true"
            android:id="@+id/radioButtonMaleSignUp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoCompleteTextViewCityNameSignUp"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/colorPrimary"
            android:hint="Female"
            android:layout_marginRight="20dp"
            android:checked="false"
            android:layout_alignParentRight="true"
            android:id="@+id/radioButtonFemaleSignUp"/>
    </RelativeLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCreateAccountSignUp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Create Account"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>
