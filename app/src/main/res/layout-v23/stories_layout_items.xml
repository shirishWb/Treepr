<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_All_title"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:elevation="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        app:cardCornerRadius="4dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="20dp"
                android:layout_margin="4dip"
                android:id="@+id/view_profile_in_stories"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="35dp"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:id="@+id/imageViewProfilePage_stories"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait">
                </ImageView>

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view_profile_in_stories"
                android:layout_marginLeft="10dp"
                android:text="Rohit Patne"
                android:textColor="@color/black"
                android:id="@+id/textViewNameStories"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageViewPlaceHolder"
                android:layout_toRightOf="@+id/textViewNameStories"
                android:src="@drawable/placeholder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/textViewStoriesLocation"
                android:text="Lonavala"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/imageViewPlaceHolder"
                android:drawablePadding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view_profile_in_stories"
                android:maxLines="1"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:layout_below="@+id/imageViewPlaceHolder"
                android:layout_marginTop="10dp"
                android:scrollHorizontally="true"
                android:textColor="@color/gray_color"
                android:id="@+id/textViewMsgStories"
                android:gravity="center|left"
                android:text="Visited Tiger Spot And Had Fun"
                android:textSize="15dp"
                android:paddingLeft="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_All_image"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:elevation="35dp"
        app:cardCornerRadius="4dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:scaleType="fitXY"
                android:id="@+id/imageViewStories"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:id="@+id/textViewStoriesInfo"
                android:text="Best spot to Visit in Rainy season have mountain view and all etc stuff buffb"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:lineSpacingExtra="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/social"
                    android:text="PLAN NOW"
                    android:textAlignment="textStart"
                    android:paddingLeft="20dp"
                    android:id="@+id/buttonStoriesPlanNow"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="@color/gray_color"
                    tools:ignore="RtlCompat" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_toRightOf="@+id/buttonAllFavorite"
                    android:drawableLeft="@drawable/ic_menu_share"
                    android:text="SHARE YOUR STORIES"
                    android:textColor="@color/gray_color"
                    android:textAlignment="viewStart"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:id="@+id/buttonStoriesShare"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>